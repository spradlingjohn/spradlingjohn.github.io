style.css ----------------------------------------------------------------------------->

/* BASE STYLES */
body {
  font-family: 'Inter', sans-serif;
  background-color: #F5F5F5;
  color: #222222;
  padding: 20px;
  max-width: 1000px;
  margin: auto;
}

header {
  text-align: center;
  margin-bottom: 40px;
}

nav {
  text-align: center;
  margin-bottom: 30px;
}

nav a {
  margin: 0 10px;
  text-decoration: none;
  font-weight: 600;
  color: #4B0082;
}

nav a:hover {
  text-decoration: underline;
}

/* COLORS SECTION */
.color-swatch {
  padding: 20px;
  border-radius: 8px;
  margin: 15px 0;
  color: #fff;
  max-width: 400px;
}

.primary { background-color: #4B0082; }
.accent { background-color: #9370DB; }
.neutral { background-color: #CCCCCC; color: #000; }

/* FONTS SECTION */
.font-sample {
  margin-bottom: 20px;
}

.inter { font-family: 'Inter', sans-serif; }
.dm-serif { font-family: 'DM Serif Display', serif; }

.bold { font-weight: 700; }
.italic { font-style: italic; }

/* TEXT STYLES */
#text div {
  margin-bottom: 20px;
}

/* COMPONENTS */
button {
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  margin-right: 10px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn-primary {
  background-color: #4B0082;
  color: #fff;
}

.btn-primary:hover {
  background-color: #360062;
}

.btn-secondary {
  background-color: #9370DB;
  color: #fff;
}

.btn-secondary:hover {
  background-color: #6a4aa3;
}

.card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 20px;
  background-color: #fff;
  max-width: 350px;
  margin-top: 20px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}



