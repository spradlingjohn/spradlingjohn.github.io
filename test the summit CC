style.css  -------------------------------------------->

/* General link styling */
a {
  cursor: pointer;
  text-decoration: none;
  transition: color 0.3s ease;
}

/* General hover styling for non-navigation links */
a:hover {
  color: #FF5733;
  text-decoration: underline;
}

/* Specific styling for nav links */
.nav-link {
  cursor: pointer;
  transition: color 0.3s ease, border-bottom 0.3s ease;
}

/* Specific hover styling for nav links */
.nav-link:hover {
  color: #2176FF;
  border-bottom: 2px solid #2176FF;
}
.btn {
  background-color: #2176FF;   /* Consistent with siteâ€™s primary blue */
  color: #ffffff;              /* White text for contrast */
  font-family: 'Raleway', sans-serif;
  font-size: 18px;
  font-weight: 600;
  padding: 15px 40px;
  border: none;
  border-radius: 100px;          /* Slight rounding for modern look */
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
  text-decoration: none;       /* Remove any underline */
}
/* Hover state */
.btn:hover {
  background-color: #195ecf;  /* Darker blue on hover */
  transform: scale(1.05);     /* Slight grow effect */
  transition: background-color 0.3s ease, transform 0.2s ease;
}

/* Active (pressed) state */
.btn:active {
  background-color: #154aad;  /* Even darker blue when pressed */
  transform: scale(0.98);     /* Slight shrink to mimic pressing down */
}
.activity {
  cursor: pointer;                    /* Show it's clickable */
  transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);  /* Soft shadow for depth */
  border-radius: 8px;                 /* Slight rounding for a modern look */
}
/* Hover state */
.activity:hover {
  background-color: #195ecf; /* Darker blue */
  transform: scale(1.03);    /* Slight enlarge */
  box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); /* Stronger shadow */
}

/* Active (pressed) state */
.activity:active {
  background-color: #154aad; /* Even darker blue */
  transform: scale(0.98);    /* Slight compress */
  box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1); /* Smaller shadow */
}
